<%- model_class = Customer -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.pluralize.titleize %></h1>
</div>
<div class='table-responsive'>
<table class="table table-striped">
  <thead>
    <tr>
      <th class="col-md-.3"><%= model_class.human_attribute_name(:id) %></th>
      <th class="col-md-.3"><%= model_class.human_attribute_name(:avatar) %></th>
      <th class="col-md-.3"><%= model_class.human_attribute_name(:coat_1) %></th>
      <th class="col-md-.3"><%= model_class.human_attribute_name(:coat_2) %></th>
      <th class="col-md-.3"><%= model_class.human_attribute_name(:coat_3) %></th>
      <th class="col-md-.3"><%= model_class.human_attribute_name(:coat_4) %></th>
      <th class="col-md-.3"><%= model_class.human_attribute_name(:coat_5) %></th>
      <th class="col-md-.3"><%= model_class.human_attribute_name(:coat_6) %></th>
      <th class="col-md-.3"><%= model_class.human_attribute_name(:coat_7) %></th>
      <th class="col-md-.3"><%= model_class.human_attribute_name(:coat_8) %></th>
      <th class="col-md-.3"><%= model_class.human_attribute_name(:coat_9) %></th>
      <th class="col-md-.3"><%= model_class.human_attribute_name(:coat_10) %></th>
      <th class="col-md-.3"><%= model_class.human_attribute_name(:coat_11) %></th>
      <th class="col-md-.3"><%= model_class.human_attribute_name(:coat_12) %></th>
      <th class="col-md-.3"><%= model_class.human_attribute_name(:coat_13) %></th>
      <th class="col-md-.3"><%= model_class.human_attribute_name(:pant_1) %></th>
      <th class="col-md-.3"><%= model_class.human_attribute_name(:pant_2a) %></th>
      <th class="col-md-.3"><%= model_class.human_attribute_name(:pant_2b) %></th>
      <th class="col-md-.3"><%= model_class.human_attribute_name(:pant_3) %></th>
      <th class="col-md-.3"><%= model_class.human_attribute_name(:pant_4) %></th>
      <th class="col-md-.3"><%= model_class.human_attribute_name(:pant_5) %></th>
      <th class="col-md-.3"><%= model_class.human_attribute_name(:pant_6) %></th>
      <th class="col-md-.3"><%= model_class.human_attribute_name(:pant_7) %></th>
      <th class="col-md-.3"><%= model_class.human_attribute_name(:pant_8) %></th>
      <th class="col-md-.3"><%= model_class.human_attribute_name(:shirt_1) %></th>
      <th class="col-md-.3"><%= model_class.human_attribute_name(:shirt_2) %></th>
      <th class="col-md-.3"><%= model_class.human_attribute_name(:shirt_3) %></th>
      <th class="col-md-.3"><%= model_class.human_attribute_name(:shirt_4) %></th>
      <th class="col-md-.3"><%= model_class.human_attribute_name(:shirt_5) %></th>
      <th class="col-md-.3"><%= model_class.human_attribute_name(:shirt_6) %></th>
      <th class="col-md-.3"><%= model_class.human_attribute_name(:shirt_7) %></th>
      <th class="col-md-.3"><%= model_class.human_attribute_name(:shirt_8) %></th>
      <th class="col-md-.3"><%= model_class.human_attribute_name(:shirt_9) %></th>
      <th class="col-md-.3"><%= model_class.human_attribute_name(:shirt_10) %></th>
      <th class="col-md-.3"><%= model_class.human_attribute_name(:created_at) %></th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @customers.each do |customer| %>
      <tr>
        <td><%= link_to customer.id, customer_path(customer) %></td>

        <td><%= image_tag(customer.avatar.thumb) %></td>
        <td><%= customer.coat_1 %></td>
        <td><%= customer.coat_2 %></td>
        <td><%= customer.coat_3 %></td>
        <td><%= customer.coat_4 %></td>
        <td><%= customer.coat_5 %></td>
        <td><%= customer.coat_6 %></td>
        <td><%= customer.coat_7 %></td>
        <td><%= customer.coat_8 %></td>
        <td><%= customer.coat_9 %></td>
        <td><%= customer.coat_10 %></td>
        <td><%= customer.coat_11 %></td>
        <td><%= customer.coat_12 %></td>
        <td><%= customer.coat_13 %></td>
        <td><%= customer.pant_1 %></td>
        <td><%= customer.pant_2a %></td>
        <td><%= customer.pant_2b %></td>
        <td><%= customer.pant_3 %></td>
        <td><%= customer.pant_4 %></td>
        <td><%= customer.pant_5 %></td>
        <td><%= customer.pant_6 %></td>
        <td><%= customer.pant_7 %></td>
        <td><%= customer.pant_8 %></td>
        <td><%= customer.shirt_1 %></td>
        <td><%= customer.shirt_2 %></td>
        <td><%= customer.shirt_3 %></td>
        <td><%= customer.shirt_4 %></td>
        <td><%= customer.shirt_5 %></td>
        <td><%= customer.shirt_6 %></td>
        <td><%= customer.shirt_7 %></td>
        <td><%= customer.shirt_8 %></td>
        <td><%= customer.shirt_9 %></td>
        <td><%= customer.shirt_10 %></td>
        <td><%= customer.created_at %></td>
        <td>
          <%= link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_customer_path(customer), :class => 'btn btn-mini' %>
        </td>
        <td>
          <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      customer_path(customer),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'btn btn-mini btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
</div>
<%= link_to t('.new', :default => t("helpers.links.new")),
            new_customer_path,
            :class => 'btn btn-primary' %>
